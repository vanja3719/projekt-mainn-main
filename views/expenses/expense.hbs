<div class="overflow-x-auto bg-white shadow-lg rounded-lg p-6">
  <div class="grid grid-cols-5 gap-6 mb-4">
    <div class="text-lg font-semibold text-gray-700">Naziv troška</div>
    <div class="text-lg font-semibold text-gray-700">Iznos</div>
    <div class="text-lg font-semibold text-gray-700">Datum</div>
    <div class="text-lg font-semibold text-gray-700">Kategorija</div>
    <div class="text-lg font-semibold text-gray-700">Mogućnosti</div>
  </div>

  {{#each items}}
    <div class="grid grid-cols-5 gap-6 items-center border-b py-4">
      <div class="text-gray-900 font-medium">{{name}}</div>
      <div class="text-gray-900">{{amount}} €</div>
      <div class="text-gray-600">{{date}}</div>
      <div class="text-gray-600">{{category}}</div>
      <div class="text-center">
        <form action="/expenses/delete/{{id}}" method="POST">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-red-600 transition-all duration-200">
            Obriši
          </button>
        </form>
      </div>
    </div>
  {{/each}}
  
 
{{#if invalid_id}}
  <div class="mt-4 p-4 bg-red-100 text-red-700 rounded-lg">
    <p class="font-medium">Nepostojeći trošak!</p>
  </div>
{{/if}}
