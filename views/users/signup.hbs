<div class="min-h-screen flex items-center justify-center ">
    <div class="border bg-white p-8 shadow-lg rounded-lg w-full max-w-md">
        <div class="text-2xl mb-4 font-semibold text-center">Registracija korisnika</div>

        <form method="post" action="/users/signup" class="grid grid-cols-1 gap-3">
            <label for="name" class="text-gray-700">Ime</label>
            <input type="text" name="name" minlength="3" maxlength="100" required 
                class="p-2 border rounded w-full focus:ring-2 focus:ring-blue-500" />

            <label for="email" class="text-gray-700">E-mail adresa</label>
            <input type="email" name="email" maxlength="100" required 
                class="p-2 border rounded w-full focus:ring-2 focus:ring-blue-500" />

            <label for="password" class="text-gray-700">Zaporka</label>
            <input type="password" name="password" minlength="6" required 
                class="p-2 border rounded w-full focus:ring-2 focus:ring-blue-500" />

            <label for="passwordConfirmation" class="text-gray-700">Potvrda zaporke</label>
            <input type="password" name="passwordConfirmation" minlength="6" required 
                class="p-2 border rounded w-full focus:ring-2 focus:ring-blue-500" />

            <input type="submit" value="Registracija"
                class="w-full p-3 bg-green-600 text-white font-semibold hover:bg-green-800 rounded cursor-pointer mt-2" />

            <input type="reset" value="Poništi"
                class="w-full p-3 bg-red-500 text-white font-semibold hover:bg-red-700 rounded cursor-pointer" />
        </form>

        {{#if error_validation}}
        <p class="text-red-600 mt-3 text-center">Dogodila se greška u provjeri podataka!</p>
        {{/if}}

        {{#if error_database}}
        <p class="text-red-600 mt-3 text-center">Dogodila se greška prilikom spremanja u bazu podataka!</p>
        {{/if}}

        {{#if success}}
        <p class="text-green-600 mt-3 text-center">Korisnik je uspješno registriran!</p>
        {{/if}}
    </div>
</div>
